@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row text-center">
    <div class="col">
        <h1 class="display-4">Welcome <small>to our Company</small> </h1>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col col-lg-8">


        <div class="card cardBoxShadow mt-3">

            <div class="card-header cardHeaderStyle">
                <h1>Our Employees</h1>
            </div>

            <div class="card-body text-center cardBodyStyle">
                <div class="row">
                    <div class="col">
                        @await Component.InvokeAsync("HeadCount");
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>