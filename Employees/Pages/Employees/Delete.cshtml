@page "{id:min(1)}"
@model Employees.DeleteModel
@{
    ViewData["Title"] = "Delete";
    ViewData["ShowButtons"] = false;
}

<h1 class="text-center">Delete Confirmation</h1>
<div class="alert alert-danger">
    <div class="row">
        <div class="col-12 col-md-6 col-xl-4 offset-sm-0 offset-md-3 offset-xl-4">
            <partial name="_DisplayEmployeePartial" model="Model.Employee" view-data="ViewData" />
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-md-6 col-xl-4 offset-sm-0 offset-md-3 offset-xl-4">
            <div class="text-center text-secondary">
                <h4>Employee ID: <span class="text-primary">@Model.Employee.Id</span> </h4><hr />
                <h4>Email: <span class="text-primary">@Model.Employee.Email</span> </h4><hr />
                <h4>Department: <span class="text-primary">@Model.Employee.Email</span> </h4><hr />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col text-center">
            <h5>A you sure want to delete Employee - @Model.Employee.Name?</h5>
            <form method="post">
                <button type="submit" class="btn btn-danger">Yes</button>
                <a asp-page="/Employees/Employees" class="btn btn-primary">No</a>

            </form>
        </div>
    </div>
</div>
