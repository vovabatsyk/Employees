@model Employee

@{
    var photoPath = $"/images/{Model.PhotoPath ?? "noimage.png"}";
    var showButtons = (bool)ViewData["ShowButtons"];
}

<div class="card-deck">
    <div class="card m-3 cardBoxShadow">
        <div class="card-header text-center cardHeaderStyle">
            <h3>@Model.Name</h3>
        </div>

        <div class="text-center m-1">
            <img src="@photoPath" class="card-img-top imageThumbnail" asp-append-version="true" />
        </div>

        <div class="card-footer text-center">
            @if (showButtons)
            {
                <a asp-page="/Employees/Details" asp-route-id="@Model.Id" class="btn btn-success m-1 buttonShadow">View</a>
                @if (Model.Id > 0)
                {
                    <a asp-page="/Employees/Edit" asp-route-id="@Model.Id" class="btn btn-primary m-1 buttonShadow">Edit</a>
                    <a asp-page="/Employees/Delete" asp-route-id="@Model.Id" class="btn btn-danger m-1 buttonShadow">Delete</a>
                }
            }

        </div>
    </div>
</div>
